                        <!-- Woo2Shopify: Force Translation Script -->
                        <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            // Translation data
                            const translations = {
                                title: {{ translated_title | json }},
                                description: {{ translated_description | json }},
                                original_title: {{ product.title | json }},
                                original_description: {{ product.description | json }},
                                locale: {{ request.locale.iso_code | json }}
                            };

                            console.log('üåç Woo2Shopify Force Translation:', translations);

                            function forceTranslateDescription() {
                                if (!translations.description || translations.description === translations.original_description) {
                                    return; // No translation needed
                                }

                                // Find all possible description containers
                                const selectors = [
                                    '.rte',
                                    '.product-description',
                                    '.tab-pane .rte',
                                    '[role="tabpanel"] .rte',
                                    '.product-tabs .rte',
                                    '.accordion-body .rte'
                                ];

                                let updated = 0;

                                selectors.forEach(selector => {
                                    document.querySelectorAll(selector).forEach(element => {
                                        const text = element.textContent.trim();
                                        const originalText = translations.original_description.replace(/<[^>]*>/g, '').trim();

                                        // Check if this element contains the original description
                                        if (text.includes(originalText.substring(0, 100)) ||
                                            element.innerHTML.includes(originalText.substring(0, 100))) {
                                            element.innerHTML = translations.description;
                                            element.style.borderLeft = '3px solid #28a745';
                                            element.style.paddingLeft = '10px';
                                            updated++;
                                            console.log('‚úÖ Force updated:', selector, element);
                                        }
                                    });
                                });

                                console.log(`üéØ Force translation updated ${updated} elements`);
                                return updated;
                            }

                            // Run immediately
                            setTimeout(forceTranslateDescription, 100);

                            // Run again after tab clicks
                            document.addEventListener('click', function(e) {
                                if (e.target.matches('[data-bs-toggle="tab"], .nav-link, .accordion-button')) {
                                    setTimeout(forceTranslateDescription, 200);
                                }
                            });

                            // Run periodically for dynamic content
                            setInterval(forceTranslateDescription, 2000);
                        });
                        </script>

